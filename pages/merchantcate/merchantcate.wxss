/* 乐享商家 */
.lx-merchants{
  padding-top: 50rpx;
}
.lx-merchants-header{
  display: flex;
  margin: 0 32rpx 1rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  color: #999;
  position: relative;
}
.lx-merchants-header-title{
  position: relative;
  z-index: 2;
}
.lx-merchants-header-title.current{
  color: #333;
  font-weight: bold;
}
.lx-merchants-header-title-line{
  width: 100%;
  height: 4rpx;
  background: #FF0000;
  position: absolute;
  left: 0;
  bottom: 0;
  border-radius: 2rpx;
}
.lx-merchants-header-line{
  width: 100%;
  height: 2rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: scale(1, 0.5);
  transform-origin: 50% 100%;
  background: #E5E5E5;
  z-index: 1;
}
.lx-filter{
  margin-left: 64rpx;
  height: 100%;
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.lx-filter-text{
  padding: 0 10rpx;
  color: #666;
  font-size: 24rpx;
}
.icon-pull_down{
  font-size: 12rpx;
  color: #666;
}
.sort-type{
  flex: 1;
  font-size: 26rpx;
  line-height: 36rpx;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.sort-type-distance.current,.sort-type-hot.current{
  font-weight: bold;
  color: #FF0000;
}
.sort-type-hot{
  padding-right: 0;
}
.sort-type-line-distance,.sort-type-line-hot {
  height: 4rpx;
  background-color: #FF0000;
}
.sort-type-line-distance {
  width: 100%;
}
.line-separator-v {
  margin: 0 18rpx;
}
.lx-merchants-body{
  padding: 16rpx 32rpx 46rpx;
}