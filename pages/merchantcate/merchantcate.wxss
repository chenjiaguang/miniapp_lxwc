/* pages/merchantcate/merchantcate.wxss */
@import "../../assets/styles/common-page.wxss";

.page-merchantcate{
  padding-top: 22rpx;
}

/* 搜索框 */
.search-box-wrapper{
  overflow: hidden;
}
.search-box{
  margin: 10rpx 32rpx 20rpx;
  height: 74rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #999;
  background: #F2F1EF;
  border-radius: 16rpx;
  padding: 0 45rpx;
}
.icon-search{
  font-size: 30rpx;
  color: #999;
  margin-right: 12rpx;
}

/* 商家分类 */
.merchant-cate-wrapper{
  position: relative;
  height: 182rpx;
}
.merchant-cate-box{
  position: absolute;
  width: 100%;
  height: 182rpx;
  left: 0;
  top: 0;
  z-index: 99;
  background: #fff;
}
.merchant-cate-box.fixed{
  position: fixed;
}
.merchant-cate{
  padding: 20rpx 0 2rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}
.merchant-view {
  display: flex;
}
.merchant-cate-content{
  display: flex;
}
.cate{
  flex-shrink: 0;
  width: 142rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: content-box;
}
.cate.first{
  padding-left: 20rpx;
}
.cate.last{
  padding-right: 20rpx;
}
.cate-image{
  display: block;
  width: 94rpx;
  height: 94rpx;
}
.cate-text{
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  line-height: 68rpx;
  color: #333;
  text-align: center;
}
.cate-text.currentCate {
  color: #FF0000;
  font-weight: 700;
}

