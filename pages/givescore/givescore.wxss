/* pages/givescore/givescore.wxss */
@import "../../assets/styles/common-page.wxss";

page{
  background: #F7F7F7;
}
.score-box{
  height: 120rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.score-head{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #090909;
}
.textarea-box{
  display: flex;
  position: relative;
  padding-bottom: 47rpx;
  background: #fff;
}
.input-placeholder{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
}
.textarea{
  display: block;
  flex: 1;
  height: 300rpx;
  box-sizing: border-box;
  padding: 18rpx 32rpx 18rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
}
.text-counter{
  position: absolute;
  right: 32rpx;
  bottom: 15rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999;
}
.anonymous-box{
  height: 112rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.checkbox-label{
  display: flex;
  font-size: 28rpx;
  color: #4A4A4A;
  line-height: 44rpx;
  align-items: center;
}
.checkbox{
  width: 44rpx;
  line-height: 44rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.checkbox .wx-checkbox-input{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #FF6600;
  border-color: #FF6600;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.submit-btn{
  width: 200rpx;
  height: 72rpx;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #fff;
  background: #FF6600;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 130rpx auto 150rpx;
}

.image-box{
  display: flex;
  padding: 32rpx 32rpx;
  overflow: hidden;
  flex-wrap: wrap;
}
.image-item{
  position: relative;
  width: 32%;
  padding-top: 32%;
  margin-top: 2%;
  margin-left: 2%;
  flex-shrink: 0;
  flex-grow: 0;
  background: #E5E5E5;
}
.upload-btn-content{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.upload-btn-sign{
  width: 37.5%;
  height: 37.5%;
  position: relative;
}
.btn-sign-h{
  width: 100%;
  height: 8rpx;
  background: #979797;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -4rpx;
}
.btn-sign-v{
  width: 8rpx;
  height: 100%;
  background: #979797;
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -4rpx;
}
.upload-btn-text{
  font-size: 24rpx;
  line-height: 24rpx;
  padding-top: 36rpx;
  color: #999;
}
.image-img{
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.image-tip{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}
.close-btn{
  color: #fff;
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(0,0,0,0.2);
  height: 40rpx;
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  overflow: visible;
}
.close-btn-icon{
  font-size: 40rpx;
  line-height: 40rpx;
}