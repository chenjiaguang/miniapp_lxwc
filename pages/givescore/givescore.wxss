/* pages/givescore/givescore.wxss */
@import "../../assets/styles/common-page.wxss";

page{
  background: #F7F7F7;
}
.score-box{
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.textarea-box{
  display: flex;
  position: relative;
  padding-bottom: 36rpx;
  background: #fff;
}
.textarea{
  display: block;
  flex: 1;
  height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx 32rpx 20rpx;
}
.text-counter{
  position: absolute;
  right: 32rpx;
  bottom: 0;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #666;
}
.anonymous-box{
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.checkbox-label{
  display: flex;
  font-size: 28rpx;
  color: red;
  line-height: 44rpx;
  align-items: center;
}
.checkbox{
  width: 44rpx;
  line-height: 44rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.checkbox .wx-checkbox-input{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #3296fa;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.submit-btn{
  width: 140rpx;
  height: 72rpx;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #fff;
  background: orange;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.image-box{
  display: flex;
  padding: 10rpx 32rpx;
  overflow: hidden;
  flex-wrap: wrap;
}
.image-item{
  position: relative;
  width: 32%;
  padding-top: 32%;
  margin-top: 2%;
  margin-left: 2%;
  flex-shrink: 0;
  flex-grow: 0;
}
.upload-btn-text{
  position: absolute;
  width: 100%;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
}
.image-img{
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.image-tip{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}