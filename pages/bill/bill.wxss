/* pages/bill/bill.wxss */

@import "../../assets/styles/common-page.wxss";
page {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.page-bill {
    padding-top: 90rpx;
    flex: 1;
}

.header {
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-around;
    align-items: stretch;
    position: fixed;
    left: 0;
    top: 0;
    background: #fff;
    z-index: 1;
}

.header-item {
    flex: 1;
    font-size: 32rpx;
    color: #333;
    line-height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.4s;
}

.header-item.current {
    color: #FF0000;
}

.indicator-box {
    padding-top: 6rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}

.indicator {
    position: absolute;
    width: 66rpx;
    height: 6rpx;
    top: 0;
    left: 58rpx;
    background: #FF0000;
    transition: all 0.4s;
}

.tab-content-wrapper {
    width: 100%;
    height: 100%;
}

.tab-swiper {
    display: block;
    width: 100%;
    height: 100%;
}

.tab-scroll-view {
    width: 100%;
    height: 100%;
}

.bill-item {
    height: 140rpx;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 32rpx;
}

.left {
    flex: 1;
    overflow: hidden;
    margin-right: 20rpx;
}

.right {
    flex-shrink: 0;
    font-size: 40rpx;
    color: #333;
}

.right.out {
    color: #333;
}

.right.in {
    color: #FF0000;
}

.title {
    font-size: 34rpx;
    line-height: 46rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.time {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.empty-bill {
    width: 100%;
    height: 100%;
}

.empty-image {
    display: block;
    width: 292rpx;
    height: 222rpx;
    margin: 300rpx auto 0;
}

.empty-tip {
    font-size: 32rpx;
    line-height: 44rpx;
    padding-top: 30rpx;
    text-align: center;
    color: #999;
}