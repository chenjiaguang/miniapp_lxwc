/* pages/merchantdetail/merchantdetail.wxss */

.merchant-detail{
  padding-bottom: 180rpx;
}
.title{
  font-size: 38rpx;
  font-weight: bold;
  line-height: 48rpx;
  color: #333;
  padding: 27rpx 32rpx 1rpx;
}
.star{
  margin-left: 32rpx;
}

/* 商家图片轮播 */
.merchant-covers{
  width: 100%;
  height: 400rpx;
  padding-top: 22rpx;
}
.covers-swiper{
  width: 100%;
  height: 100%;
}
.cover-image{
  display: block;
  width: 100%;
  height: 100%;
}

/* 商家公告 */
.notice{
  margin: 0 32rpx;
}
.notice-header{
  padding-top: 22rpx;
  padding-bottom: 12rpx;
  display: flex;
  align-items: center;
}
.notice-image, .shop-image, .location-image{
  display: block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.icon-notice{
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.notice-header-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  line-height: 36rpx;
}
.notice-content{
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999;
  padding-left: 38rpx;
  padding-bottom: 22rpx;
}

/* 商家营业时间 */
.business-time-wrapper{
  overflow: hidden;
  margin: 0 32rpx;
}
.business-time{
  padding: 22rpx 0;
  display: flex;
  align-items: center;
}
.icon-iconfontshangjia{
  font-size: 30rpx;
  color: #999;
  margin-right: 10rpx;
  margin-top: 2rpx;
}
.business-time-text{
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  line-height: 36rpx;
}

/* 商家地址及电话 */
.location-and-phone{
  margin: 0 28rpx 0 32rpx;
  padding: 22rpx 0;
  display: flex;
  align-items: center;
}
.icon-location_xcx{
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.location-text{
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  line-height: 36rpx;
  margin-right: 4rpx;
  flex: 1;
}
.icon-phone{
  font-size: 36rpx;
  color: #444;
  margin-left: 28rpx;
}

/* 商家优惠活动 */
.activity-header{
  font-size: 34rpx;
  line-height: 74rpx;
  padding: 12rpx 32rpx 0;
  font-weight: bold;
  color: #333;
}
/* 代金券 */
.voucher-box{
  margin: 0 32rpx;
}
.voucher-content-wrapper{
  padding: 22rpx 0;
}
.voucher-item{
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}
.voucher-text{
  flex: 1;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
  padding-right: 20rpx;
}
.voucher-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 112rpx;
  height: 44rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 28rpx;
  border-radius: 4rpx;
  background: #FF9500;
  position: relative;
}
.voucher-btn.disabled{
  opacity: 0.3;
}
/* 满减 */
.fullcut-box{
  margin: 0 32rpx;
}
.fullcut-content-wrapper{
  padding: 22rpx 0;
}
.fullcut-item{
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}
.fullcut-text{
  flex: 1;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
}
/* 满赠 */
.fullgift-box{
  margin: 0 32rpx;
}
.fullgift-content-wrapper{
  padding: 22rpx 0;
}
.fullgift-item{
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}
.fullgift-text{
  flex: 1;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
}

/* 商家简介 */
.intro-header{
  font-size: 34rpx;
  line-height: 74rpx;
  padding: 12rpx 32rpx 0;
  font-weight: bold;
  color: #333;
}
.intro-detail{
  margin: 0 32rpx;
  overflow: hidden;
}
.intro-text{
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  color: #666;
  text-align: justify;
  text-indent: 56rpx;
}
.intro-image{
  display: block;
  width: 100%;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

/* 优惠买单 */
.pay-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  z-index: 9;
  background: #FF9500;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bindphone-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  left: 0;
  top: 0;
  opacity: 0;
}


/* 充值弹窗 */
.recharge-wrapper{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: -1;
}
.recharge-wrapper.show{
  z-index: 99;
  visibility: visible;
}
.recharge-wrapper.hide{
  z-index: -1;
  visibility: hidden;
}
.recharge-box-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1;
  opacity: 0;
  transition: all 0.2s;
}
.recharge-box-bg.show{
  opacity: 1;
}
.recharge-box-bg.hide{
  opacity: 0;
  transition: all 0s;
}
.recharge-box{
  width: 686rpx;
  height: 630rpx;
  background: #fff;
  border-radius: 4rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
  transition: transform 0.2s;
}
.recharge-box.show{
  transform: scale(1, 1);
}
.recharge-box.hide{
  transform: scale(0.8, 0.8);
  visibility: hidden;
}
.recharge-ad{
  display: block;
  width: 622rpx;
  margin: 0 auto;
  height: 72rpx;
  background: #FAFAFA;
}
.title{
  padding: 0 28rpx 0 32rpx;
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 40rpx;
}
.icon-guanbi{
  font-size: 36rpx;
  color: #8D8D8D;
}
.recharge-list{
  padding-top: 5rpx;
  margin: 0 26rpx;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}
.recharge-item{
  width: 31.33%;
  margin: 0 1% 32rpx;
  height: 104rpx;
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border: 1px solid #FF9500;
  color: #FF9500;
}
.recharge-item.current{
  background: #FF9500;
  color: #fff;
}
.original-price{
  font-size: 36rpx;
  line-height: 40rpx;
}
.price{
  font-size: 24rpx;
  line-height: 28rpx;
}
.rechage-submit-btn{
  margin: 28rpx 32rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 74rpx;
  font-size: 34rpx;
  color: #fff;
  background: #FF9500;
  border-radius: 8rpx;
}