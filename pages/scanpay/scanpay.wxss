/* pages/scanpay/scanpay.wxss */
.steps{
  margin: 0 32rpx;
  height: 324rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.step-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-num{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-top: 5rpx;
}
.step-image{
  display: block;
  width: 69rpx;
  height: 69rpx;
  margin-top: 37rpx;
}
.step-text{
  font-size: 24rpx;
  line-height: 34rpx;
  color: #666;
  margin-top: 27rpx;
}
.scan-btn{
  display: block;
  width: 362rpx;
  height: 362rpx;
  margin: 154rpx auto 32rpx;
}
.scan-tip{
  font-size: 30rpx;
  line-height: 42rpx;
  color: #666;
  text-align: center;
}
