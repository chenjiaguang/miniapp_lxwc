    <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 600rpx"
      latitude="{{toLat}}"
      longitude="{{toLng}}"
      markers="{{markers}}"
      scale='13'
      polyline="{{polyline}}"
      include-points="{{includePoints}}"
      show-location
    ></map>
    <view class="btn-area">
        <button bindtap="driving" class="page-body-button" type="primary">驾车</button>
        <button bindtap="walking" class="page-body-button" type="primary">步行</button>
        <button bindtap="bicycling" class="page-body-button" type="primary">骑行</button>
    </view>
  </view>