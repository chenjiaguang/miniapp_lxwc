/* components/starBox/starBox.wxss */
.star-wrapper{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}
.star-item{
  position: relative;
  background: #D7D7D7;
}
.star-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: linear-gradient(#FFC700, #FFC700);
  left: 0;
  top: 0;
}
.star-image{
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.score-text{
  color: #FF9500;
  margin-left: 20rpx;
}