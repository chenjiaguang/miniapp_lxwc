/* components/merchantoverview/merchantoverview.wxss */

@import "../../app.wxss";
.merchant-wrapper {
    position: relative;
    padding: 27rpx 16rpx;
    margin-top: 50rpx;
    position: relative;
    overflow: visible;
    border-radius: 20rpx;
    border: 1px solid #D8D8D8;
}

.rest-bgc {
    background-color: #eeeded;
}

.rest-txt {
    width: 134rpx;
    height: 46rpx;
    border-radius: 14rpx;
    background-color: #aaa9a9;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    right: 16rpx;
    top: 74rpx;
    z-index: 99;
}

.rest-txt>text {
    color: #FFF;
    font-size: 30rpx;
}

@media screen and (min-resolution: 2dppx) {
    .merchant-wrapper {
        border: 1rpx solid #D8D8D8;
    }
}

.merchant-border {
    position: absolute;
    width: 200%;
    height: 200%;
    left: -50%;
    top: -50%;
    box-sizing: border-box;
    border: 2rpx solid #999;
    border-radius: 8rpx;
    transform: scale(0.5, 0.5);
    transform-origin: 50% 50%;
    z-index: 1;
}

.top {
    display: flex;
    position: relative;
    z-index: 2;
}

.bottom {
    padding-top: 15rpx;
    position: relative;
    z-index: 2;
}

.image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}

.overview {
    flex: 1;
    overflow: hidden;
}

.title-and-distance {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 40rpx;
    display: flex;
}

.title {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.distance {
    margin-left: 20rpx;
    font-size: 26rpx;
    color: #999;
}

.merchant-star {
    height: 54rpx;
}

.merchant-act {
    height: 42rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 5rpx;
    margin-left: 3rpx;
}

.act-icon {
    /* margin-right: 10rpx; */
    display: block;
    width: 75rpx;
    height: 30rpx;
    /* transform: scale(0.45, 0.45); */
    /* transform-origin: 50% 50%; */
    /* margin-left: -44rpx; */
    margin-right: 16rpx;
}

.act-text {
    font-size: 26rpx;
    color: #999;
    line-height: 30rpx;
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.notice {
    display: flex;
    height: 34rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    color: #999;
    padding-top: 26rpx;
    box-sizing: content-box;
}

.icon-notice {
    font-size: 24rpx;
    color: #ff9500;
    margin-right: 10rpx;
}

.star-box {
    display: block;
    margin-bottom: 12rpx;
    margin-right: 1rpx;
}