/* components/chooseVoucher/chooseVoucher.wxss */

@import "../../assets/styles/iconfont.wxss";
.wrapper {
    display: flex;
    height: 184rpx;
    padding: 0 0 0 18rpx;
    justify-content: space-between;
    align-items: stretch;
    border-radius: 16rpx;
    overflow: hidden;
    background: #FFEED7;
    position: relative;
}

.wrapper.disabled {
    background: #F4F4F4;
}

.left {
    flex: 1;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.image {
    display: block;
    width: 89rpx;
    height: 125rpx;
    border-radius: 12rpx;
    margin-right: 18rpx;
    flex-shrink: 0;
}

.overview {
    flex: 1;
    height: 134rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
}

.value-and-title {
    font-size: 30rpx;
    color: #FF0000;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.icon-renminbi {
    font-size: 26rpx;
    color: #FF0000;
}

.value {
    font-size: 54rpx;
    line-height: 58rpx;
}

.title {
    margin-left: 10rpx;
    padding-right: 18rpx;
}

.content {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    line-height: 36rpx;
    color: #999;
    flex: 1;
    padding-right: 18rpx;
}

.time {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #999;
    padding-right: 18rpx;
}

.separator {
    width: 0;
    height: 100%;
    border-left: 2rpx dashed #fff;
}

.top-white {
    width: 14rpx;
    height: 28rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    top: -14rpx;
    right: 164rpx;
    transform: translateX(50%);
}

.bottom-white {
    width: 14rpx;
    height: 28rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    bottom: -14rpx;
    right: 164rpx;
    transform: translateX(50%);
}

.right {
    flex-shrink: 0;
    width: 164rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.use-btn {
    display: flex;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    border: 1px solid #FF0000;
    background: #fff;
    position: relative;
}

.checked-sign {
    position: absolute;
    background: #FF0000;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    left: 0;
    top: 0;
    transform: scale(0.7, 0.7);
}