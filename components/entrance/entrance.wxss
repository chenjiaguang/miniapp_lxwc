/* components/entrance/entrance.wxss */
@import "../../app.wxss";
@import "../../assets/styles/iconfont.wxss";

.entrance-box{
  padding: 0 28rpx 0 32rpx;
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.entrance-image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-right: 32rpx;
}
.icon-xinghao{
  font-size: 20rpx;
  color: #F24724;
  margin-right: 20rpx;
}
.entrance-title{
  flex: 1;
  font-size: 34rpx;
  color: #333;
  line-height: 48rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 28rpx;
}
.entrance-sub-title{
  font-size: 32rpx;
  color: #6E6E6E;
  padding-right: 22rpx;
  max-width: 30%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 0;
  flex-grow: 0;
}
.entrance-sub-image{
  display: block;
  width: 70rpx;
  height: 70rpx;
  flex-shrink: 0;
  flex-grow: 0;
  margin-right:22rpx;
  border-radius: 50%;
}
.icon-next{
  font-size: 26rpx;
  color: #CCCCCC;
  flex-shrink: 0;
}
