/* components/commentBox/commentBox.wxss */
@import "../../app.wxss";

.inner-wrapper{
  display: flex;
  padding: 30rpx 4.26%;
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  background: #E5E5E5;
}
.right-box{
  flex: 1;
  overflow: hidden;
}
.name-and-time{
  height: 46rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 10rpx;
}
.time{
  font-size: 28rpx;
  color: #999;
}
.score{
  height: 40rpx;
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.score-head{
  font-size: 28rpx;
  color: #999999;
  padding-right: 20rpx;
}
.content{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #000000;
  white-space: pre-wrap;
  word-break: break-all;
  margin-top: 12rpx;
}
.image-box{
  width: 100%;
  display: flex;
  overflow: hidden;
  flex-wrap: wrap;
  margin-top: 12rpx;
  padding-bottom: 4rpx;
}
.image-item{
  width: 24.7%;
  margin-left: 6.84%;
  margin-top: 3.04%;
  position: relative;
  padding-top: 24.7%;
  flex-shrink: 0;
  flex-grow: 0;
}
.image{
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #E5E5E5;
}
.reply-box{
  margin-top: 12rpx;
}
.official-reply{
  font-size: 24rpx;
  line-height: 32rpx;
  white-space: pre-wrap;
  word-break: break-all;
  padding: 16rpx 20rpx 20rpx;
  color: #555;
  background: #E5E5E5;
}