/* components/commentBox/commentBox.wxss */

.wrapper{
  display: flex;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.right-box{
  flex: 1;
  overflow: hidden;
}
.name-and-time{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content{
  white-space: pre-wrap;
  word-break: break-all;
}
.image-box{
  width: 100%;
  display: flex;
  overflow: hidden;
}
.image-item{
  width: 32%;
  margin-left: 2%;
  margin-top: 2%;
  position: relative;
  padding-top: 32%;
}
.image{
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.official-reply{
  white-space: pre-wrap;
  word-break: break-all;
}